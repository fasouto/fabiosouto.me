<style>
  .content {
    max-width: 1200px;
  }

  p {
    font-size: clamp(2rem, 5vw, 3.25rem);
    font-weight: 400;
    line-height: 1.3;
    margin-bottom: 0.75em;
    position: relative;
  }

  strong {
    font-weight: 700;
  }

  .note {
    font-family: 'Caveat', cursive;
    font-size: 0.5em;
    color: #b85c38;
    position: absolute;
    margin-left: 1rem;
    transform: rotate(-2deg);
  }

  .note-2 {
    transform: rotate(1.5deg);
  }

  .note-3 {
    transform: rotate(-1deg);
  }

  a {
    color: #b85c38;
    text-decoration: none;
    font-weight: 600;
  }

  a:hover {
    text-decoration: underline;
  }

  @media (max-width: 640px) {
    p {
      font-size: clamp(1.5rem, 6vw, 2rem);
      margin-bottom: 1.25em;
    }

    .note {
      position: static;
      display: block;
      font-size: 1.25rem;
      margin-left: 0;
      margin-top: 0.5rem;
    }

    .note-2 {
      display: none;
    }
  }
