---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import { getCollection } from 'astro:content'

const projects = await getCollection('projects')
---

<DefaultLayout title="Projects">
  <section class="projects my-24">
    <div class="container">
      <div class="intro">
        <p class="intro-text">Side projects</p>
        <p class="intro-note">things I build for fun</p>
      </div>
      <ul class="project-list">
        {projects.map((project) => (
          <li class="project-item">
            <a href={`/projects/${project.id}`}>
              <div class="project-info">
                <h2 class="project-title">{project.data.title}</h2>
                {project.data.subtitle && (
                  <p class="project-subtitle">{project.data.subtitle}</p>
                )}
              </div>
              <div class="project-image">
                <img
                  src={`/projects/${project.id}.png`}
                  alt={project.data.title}
                />
              </div>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </section>
</DefaultLayout>

<style>
  .intro {
    text-align: center;
    margin-bottom: 4rem;
  }

  .intro-text {
    font-family: 'Inter', sans-serif;
    font-size: clamp(1.5rem, 4vw, 2.25rem);
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 0.25rem 0;
  }

  .intro-note {
    font-family: 'Caveat', cursive;
    font-size: clamp(1.4rem, 3vw, 1.8rem);
    color: #b85c38;
    margin: 0;
    transform: rotate(-1deg);
    display: inline-block;
  }

  .project-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .project-item a {
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .project-info {
    text-align: left;
  }

  .project-image {
    flex-shrink: 0;
    width: 220px;
    height: 150px;
    overflow: hidden;
    border-radius: 10px;
    border: 1px solid #e0dcd4;
    background: #f0ebe3;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .project-item a:hover .project-image img {
    transform: scale(1.05);
  }

  .project-title {
    font-family: 'Inter', sans-serif;
    font-size: clamp(1.5rem, 4vw, 2rem);
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 0.25rem 0;
  }

  .project-subtitle {
    font-family: 'Caveat', cursive;
    font-size: clamp(1.2rem, 2.5vw, 1.5rem);
    font-weight: 400;
    color: #b85c38;
    margin: 0;
    transform: rotate(-1deg);
    display: inline-block;
  }

  .project-item a:hover .project-title {
    color: #b85c38;
  }
</style>
